<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="sanguinetti.online.rapport.activities.AvAccountInfo">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/accinfo_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:titleTextColor="@color/mdtp_white"
        app:subtitleTextColor="@color/mdtp_white"
        app:navigationIcon="@drawable/ic_arrow_back_white_18dp"
        app:popupTheme="@style/AppTheme.PopupOverlay"
        android:elevation="5dp"/>
    <ProgressBar
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:indeterminate="true"
        android:layout_marginTop="-3dp"
        android:id="@+id/accinfo_progress"
        style="?android:attr/progressBarStyleHorizontal"
        android:visibility="gone"
        android:layout_below="@id/appt_toolbar"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/accinfo_titlenr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Account"
                android:textStyle="bold"
                android:textColor="@color/colorPrimaryDark"
                android:padding="20dp"
                android:background="@color/lightGrayBkg"
                />
            <TextView
                android:id="@+id/accinfo_titlename"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Account Name"
                android:textStyle="bold"
                android:textColor="@color/colorPrimaryDark"
                android:padding="20dp"
                />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_weight="3"
                    android:text="Account"
                    android:gravity="right"
                    android:textColor="@color/colorPrimaryDark"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                    android:layout_marginRight="10dp"

                    />
                <TextView
                    android:id="@+id/accinfo_nr"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_weight="2"
                    android:text=""
                    android:layout_gravity="left"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                    />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="7dp"
                    >
                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:layout_weight="3"
                        android:text="Name"
                        android:gravity="right"
                        android:textColor="@color/colorPrimaryDark"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                        android:layout_marginRight="10dp"

                        />
                    <TextView
                        android:id="@+id/accinfo_name"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:layout_weight="2"
                        android:text=""
                        android:layout_gravity="left"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="7dp"
                    >
                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:layout_weight="3"
                        android:text="Email Notification"
                        android:gravity="right"
                        android:textColor="@color/colorPrimaryDark"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                        android:layout_marginRight="10dp"

                        />
                    <TextView
                        android:id="@+id/accinfo_email"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:layout_weight="2"
                        android:text=""
                        android:layout_gravity="left"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="7dp"
                    >
                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:layout_weight="3"
                        android:text="Address"
                        android:gravity="right"
                        android:textColor="@color/colorPrimaryDark"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                        android:layout_marginRight="10dp"

                        />
                    <TextView
                        android:id="@+id/accinfo_address"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:layout_weight="2"
                        android:text=""
                        android:layout_gravity="left"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="7dp"
                    >
                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:layout_weight="3"
                        android:text="City"
                        android:gravity="right"
                        android:textColor="@color/colorPrimaryDark"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                        android:layout_marginRight="10dp"

                        />
                    <TextView
                        android:id="@+id/accinfo_city"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:layout_weight="2"
                        android:text=""
                        android:layout_gravity="left"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="7dp"
                    >
                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:layout_weight="3"
                        android:text="Phone"
                        android:gravity="right"
                        android:textColor="@color/colorPrimaryDark"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                        android:layout_marginRight="10dp"

                        />
                    <TextView
                        android:id="@+id/accinfo_phone"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:layout_weight="2"
                        android:text=""
                        android:layout_gravity="left"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="34dp"
                    >
                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:layout_weight="3"
                        android:text="OLS Authorized"
                        android:gravity="right"
                        android:textColor="@color/colorPrimaryDark"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                        android:layout_marginRight="10dp"

                        />
                    <TextView
                        android:id="@+id/accinfo_ols_auth"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:layout_weight="2"
                        android:text=""
                        android:layout_gravity="left"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="7dp"
                    >
                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:layout_weight="3"
                        android:text="OLS Mode"
                        android:gravity="right"
                        android:textColor="@color/colorPrimaryDark"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                        android:layout_marginRight="10dp"

                        />
                    <TextView
                        android:id="@+id/accinfo_ols_mode"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:layout_weight="2"
                        android:text=""
                        android:layout_gravity="left"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="7dp"
                    >
                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:layout_weight="3"
                        android:text="OLS Del. Support"
                        android:gravity="right"
                        android:textColor="@color/colorPrimaryDark"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                        android:layout_marginRight="10dp"

                        />
                    <TextView
                        android:id="@+id/accinfo_ols_delsupport"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:layout_weight="2"
                        android:text=""
                        android:layout_gravity="left"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="34dp"
                    >
                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:layout_weight="3"
                        android:text="Email status"
                        android:gravity="right"
                        android:textColor="@color/colorPrimaryDark"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                        android:layout_marginRight="10dp"

                        />
                    <TextView
                        android:id="@+id/accinfo_status_email"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:layout_weight="2"
                        android:text=""
                        android:layout_gravity="left"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="7dp"
                    >
                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:layout_weight="3"
                        android:text="Text status"
                        android:gravity="right"
                        android:textColor="@color/colorPrimaryDark"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                        android:layout_marginRight="10dp"

                        />
                    <TextView
                        android:id="@+id/accinfo_status_text"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:layout_weight="2"
                        android:text=""
                        android:layout_gravity="left"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="7dp"
                    >
                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:layout_weight="3"
                        android:text="Phone status"
                        android:gravity="right"
                        android:textColor="@color/colorPrimaryDark"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                        android:layout_marginRight="10dp"
                        />
                    <TextView
                        android:id="@+id/accinfo_status_phone"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:layout_weight="2"
                        android:text=""
                        android:layout_gravity="left"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                        />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
